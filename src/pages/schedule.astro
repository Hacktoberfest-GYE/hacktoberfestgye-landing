---
import * as SchedulePost from "../content/schedule.md";
import Navbar from "../components/Navbar";
import Layout from "../layouts/Layout.astro";
---

<Layout
  {SchedulePost.frontmatter.title}
  {SchedulePost.frontmatter.description}
>
  <header>
    <Navbar classNameHideScroll='bg-secondary' showMenu={false} client:load />
  </header>
	<section
	  id="schedule"
	  class="container mx-auto px-4 lg:px-0 py-20 md:py-24 lg:py-28"
	>
    <div class="rounded-xl p-8 lg:p-16 my-2">
	  <div class="flex flex-col w-full gap-y-4 lg:items-center">
	    <h2 class="text-black font-bold text-2xl lg:text-3xl/[3rem]">
	      {SchedulePost.frontmatter.title}
	    </h2>
	    <div class="italic text-lg mb-6">{SchedulePost.frontmatter.description}</div>
	    <div class="prose">
	      <Fragment set:html={SchedulePost.compiledContent()} />
	    </div>
    </div>
	  </div>
	</section>
</Layout>
